
<div class="container">

<h1>Test - {{title}}</h1>

    <div id="usersTable" class="mt-lg-5">
        <table class="table table-dark">
            <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Cargo</th>
                <th scope="col">Email</th>
                <th scope="col">Acciones</th>
            </tr>
            </thead>
            <tbody>

            {{# each data2}}
                    <tr id="tr_{{this.id}}">
                        <td id="tdfn_{{this.id}}">{{this.firstName }}</td>
                        <td id="tdln_{{this.id}}">{{this.lastName}}</td>
                        <td id="tdifp_{{this.id}}">{{ this.info.profession }}</td>
                        <td id="tdem_{{this.id}}">{{ this.email }}</td>
                        <td><button type="button" class="btn btn-primary buttonId" data-toggle="modal" data-target="#myModal" id="btnId" value="{{this.id}}">
                            Editar
                        </button></td>
                        <td><button type="button" class="btn btn-secondary buttonPerfil" data-toggle="modal" data-target="#myModalPerfil" value="{{this.id}}">Perfil</button></td>
                    </tr>
            {{/each}}

            </tbody>
        </table>
    </div>
</div>


<!-- Modal Editar -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Editar Usuario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="text" class="form-control" value="" aria-label="Nombre..." name="name" id="name" required> <hr>
                <input type="text" class="form-control" value="" aria-label="Apellido..." name="lastname" id="lastname" required><hr>
                <input type="text" class="form-control" value="" aria-label="Cargo..."  name="jobtitle" id="jobtitle" required><hr>
                <input type="email" class="form-control" value="" aria-label="Email..." name="email" id="email" required>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="saveChanges" value="">Guardar cambios</button>
                <button type="button" class="btn btn-danger deleteUser" value="">Eliminar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Perfil-->
<div class="modal fade" id="myModalPerfil" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabelPerfil" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabelPerfil">Perfil de Usuario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="container">
                    <table>
                        <tr class="col-md-12">
                            <td>
                                <img id="profileUser" src="..." alt="..." class="img-thumbnail" style="max-height: 200px; max-width: 200px">
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <h2 id="nameUser"></h2>
                                <p id="rutUser"></p>
                                <p id="professionUser"></p>
                                <p id="edadUser"></p>
                                <p id="addrUser"></p>
                                <p id="phoneUser"></p>
                                <p id="emailUser"></p>
                            </td>
                        </tr>
                    </table>
                </div>
                <div>
                    <canvas id="myChart"></canvas>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>


